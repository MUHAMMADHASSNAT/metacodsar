{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 10
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "_comment": "Environment variables must be set in Vercel Dashboard: MONGODB_URI, FRONTEND_URL, JWT_SECRET",
  "functions": {
    "api/index.js": {
      "maxDuration": 10
    }
  }
}
